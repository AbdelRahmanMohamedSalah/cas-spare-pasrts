<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mahmoud.carsparepartsonlineshopping.Activities.ProductItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/exterior" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="#7c363636">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="4dp"
                        android:text="Engine Motor Bmw"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                    <!--android:padding="4dp"-->

                    <TextView
                        android:id="@+id/priceItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:padding="5dp"
                        android:text="200 LE"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />


                </LinearLayout>

            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:background="@drawable/item_details_singleline"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Manufactur"
                android:textColor="#515050"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/manuItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/actor"
                android:gravity="right"
                android:paddingRight="8dp"
                android:text="BMW"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <!--<view-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_details_singleline"

            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Model"
                android:textColor="#d9515050"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/modelItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/actor"
                android:gravity="right"
                android:paddingRight="8dp"
                android:text="X6"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <!--<view-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/item_details_singleline"

            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Type"
                android:textColor="#d9515050"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subModelItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/actor"
                android:gravity="right"
                android:paddingRight="8dp"
                android:text="Sedan"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <!--<view-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
android:background="@drawable/item_details_singleline"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Year"
                android:textColor="#d9515050"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yearItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/actor"
                android:gravity="right"
                android:paddingRight="8dp"
                android:text="2018"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <!--<view-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="#f4f4f4"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subCategoryItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/actor"
                android:text="car parts for bmw engine and caller bmw
car parts for bmw engine and caller bmw
car parts for bmw engine and caller bmw"

                android:textSize="16sp" />


        </LinearLayout>


        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/elegantNumber"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            app:backGroundColor="@color/colorPrimary"
            app:textSize="8dp">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        <Button
            android:id="@+id/addToCartBtn"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btnstyle"
            android:fontFamily="@font/nunito_semibold"
            android:text="ADD TO CARD"
            android:textColor="#000" />
    </LinearLayout>


</ScrollView>
